<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info</h2>
<%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
  <label for="user_name">Name</label>
  <p>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  </p>
  <label for="user_image">Image</label>
  <p>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  </p>
  <label for="user_introduction">Introduction</label>
  <p>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Update User" %>
  </p>
<% end %>
</div>