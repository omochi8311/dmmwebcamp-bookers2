<div class="col-md-3">
<%= render 'users/info', user: @user %>
<%= render 'books/newbook', books: @book %>
</div>
<div>
  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <% @books.each do |book| %>
    <table class="table">
      <tbody>
        <tr>
          <td><%= image_tag current_user.get_profile_image %>
          <br><%= current_user.name %></td>
          <td><%= link_to book.title, "/books/#{book.id}" %></td>
          <td><%= book.body %></td>
        </tr>
      </tbody>
    </table>
  </div>
    <% end %>
  <% if @book.user == current_user %>
    <%= link_to "Destroy", books_path(@book), method: :delete %>
  <% end %>
</div>
