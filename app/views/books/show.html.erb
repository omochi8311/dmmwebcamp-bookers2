<div class="col-md-3">
<h2>User info</h2>
<p><%= image_tag @user.get_profile_image %></p>
  <p>name：<%= @user.name %></p>
  <p>introduction：<%= @user.introduction %></p>
  <p><%= link_to "プロフ編集",edit_user_path %></p>
  <%= render 'books/newbook', books: @book %>
</div>
<div>
  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table table-striped">
      <tbody>
        <tr>
          <td><%= image_tag current_user.get_profile_image %>
          <br><%= link_to @user.name, user_path(@user) %></td>
          <td><%=link_to  @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
        <% if @book.user == current_user %>
          <td><%= link_to "Edit", edit_book_path(@book) %></td>
          <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
         <% end %>
        </tr>
      </tbody>
    </table>
  </div>

</div>
