<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h1>Editing Book</h1>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
<div class="form-group">

 <lable for="book_title">Title</lable>
<p>
  <%= f.text_field :title %>
</p>
</div>
<div class="form-group">
 <lable for="book_body">Opinion</lable>
 <p>
  <%= f.text_area :body %>
</p>
</div>

<%= f.submit "Update Book" %>
<p>
<th><%= link_to "show",users_path %></th>
|
<th><%= link_to "Back",books_path %></th>

<% end %>


</div>