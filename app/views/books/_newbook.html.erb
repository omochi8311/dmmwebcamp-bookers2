<h2 class="mt-3">New book</h2>
 <%= form_with model: books do |f| %>

<div class="form-group">
 <label for="book_title">Title</label><br>
  <%= f.text_field :title %>
</div>

 <div class="form-group">
   <label for="book_body">Opinion</label><br>
    <%= f.text_area :body %>
</div>

  <div class="form-group">
   <p><%= f.submit 'Create Book',class: "btn btn-success" %></p>
  </div>
 <% end %>
