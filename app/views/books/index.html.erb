<div class="container">
    <% if @book.errors.any? %>
    <h3>
    <%= @book.errors.count %>error prohibited this obj from being saved:
    </h3>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
   </ul>
<% end %>
 <div class="row">
  <div class="col-md-3">
   <%= render 'users/info', user: @user %>
   <h2>New book</h2>
    <%= form_with model: @book do |f| %>
   <h4>Title</h4>
    <%= f.text_field :title %>
   <h4>Opinion</h4>
    <%= f.text_area :body %>
    <p><%= f.submit 'Create Book',class: "btn btn-success" %></p>
     <% end %>
  </div>
  <div class="col-md-8 offset-md-1">
   <h2>Books</h2>
    <table class="table table-hover table-inverse">
   <tbody>
    <thead>
     <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
      </tr>
    </thead>
      <% @books.each do |book| %>
      <tr>
       <td>
           <%= link_to user_path(book.user) do %>
           <%= image_tag book.user.get_profile_image %>
           <% end %>
       </td>

       <td><%= link_to book.title, "/books/#{book.id}" %></td>
       <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
   </div>
   </table>
 </div>
</div>
